{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["assets/*"],
            "@components": ["src/components"],
            "@config/*": ["src/config/*"],
            "@contexts/*": ["src/contexts/*"],
            "@screens": ["src/screens"],
            "@utils": ["src/utils"]
        },
        "useUnknownInCatchVariables": false
    }
}
